<%- include('header') %>

    <div class="max-w-md mx-auto">
        <div class="mb-8 text-center">
            <h1 class="text-3xl font-bold text-slate-800">Cadastrar Usuário</h1>
            <p class="text-slate-500">Crie um novo acesso para o sistema.</p>
        </div>

        <div class="card p-8 bg-gradient-to-br from-white to-slate-50">
            <form action="/register-user" method="POST" class="space-y-6">

                <div class="space-y-2">
                    <label class="block text-sm font-bold text-slate-700">Nome de Usuário</label>
                    <input type="text" name="usuario" class="input-field" placeholder="Ex: admin" required>
                </div>

                <div class="space-y-2">
                    <label class="block text-sm font-bold text-slate-700">Senha</label>
                    <input type="password" name="senha" class="input-field" placeholder="Crie uma senha forte" required>
                </div>

                <div class="pt-4 space-y-3">
                    <button type="submit" class="btn-primary w-full shadow-xl">
                        Cadastrar Usuário
                    </button>
                    <a href="/login"
                        class="block text-center text-sm font-semibold text-slate-400 hover:text-brand-600 transition-colors">
                        Cancelar e Voltar
                    </a>
                </div>

            </form>
        </div>
    </div>

    <%- include('footer') %>