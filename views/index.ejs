                    label: "PrÃ³ximo mÃªs",
                    lista: JSON.parse(raw.dataset.proximoLista)
                }
            }[mes];

            const listContainer = document.getElementById('birthdayList');
            const modalHeader = document.getElementById('modalHeader');
            const modalTitle = document.getElementById('modalTitle');
            const printBtn = document.getElementById('modalPrintBtn');

            modalTitle.innerText = `Aniversariantes de ${data.nome}`;
            modalHeader.className = `px-6 py-4 flex justify-between items-center transition-colors ${data.cor}`;

            // Set Print link with month parameter
            printBtn.href = `/print-birthdays?month=${data.mNum}`;
            printBtn.style.display = 'flex'; // Always show now

            listContainer.innerHTML = '';
            if (data.lista.length === 0) {
                listContainer.innerHTML = `<p class="text-center text-slate-400 py-8 italic">NinguÃ©m faz aniversÃ¡rio em ${data.nome}.</p>`;
            } else {
                data.lista.forEach(niver => {
                    const item = document.createElement('div');
                    item.className = `flex justify-between items-center p-3 bg-slate-50 rounded-xl group ${data.hover} transition-colors`;
                    item.innerHTML = `
                        <div class="flex items-center gap-3">
                            <div class="w-8 h-8 ${data.badge} rounded-lg flex items-center justify-center font-bold text-sm">
                                ${niver.dia}
                            </div>
                            <span class="font-bold text-slate-700 uppercase">${niver.nome}</span>
