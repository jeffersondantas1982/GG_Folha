    <script>
        function applyFilter(name, value) {
            const url = new URL(window.location.href);
            if (value) url.searchParams.set(name, value);
            else url.searchParams.delete(name);

            // Reset page when filtering
            url.searchParams.set('page', '1');
            window.location.href = url.toString();
        }

        function openVacationModal(name) {
            const modal = document.getElementById('vacationModal');
            const content = document.getElementById('vacationModalContent');
            document.getElementById('vacationEmployeeName').innerText = name;
            modal.classList.remove('hidden');
            setTimeout(() => {
                content.classList.remove('scale-95', 'opacity-0');
            }, 10);
        }

        function closeVacationModal() {
            const modal = document.getElementById('vacationModal');
            const content = document.getElementById('vacationModalContent');
            content.classList.add('scale-95', 'opacity-0');
            setTimeout(() => {
                modal.classList.add('hidden');
            }, 300);
        }

        // Global listener for actions
        document.addEventListener('DOMContentLoaded', () => {
            // Highlight search results
            const query = '<%= searchQuery %>'.toLowerCase().trim();
            if (query) {
                const elementsToSearch = document.querySelectorAll('td .font-bold, td .text-sm, td .text-xs');
                elementsToSearch.forEach(el => {
                    const text = el.innerText;
                    if (text.toLowerCase().includes(query)) {
                        const regex = new RegExp(`(${query})`, 'gi');
                        el.innerHTML = text.replace(regex, '<mark class="bg-amber-200 text-amber-900 rounded px-0.5">$1</mark>');
                    }
                });
            }

            // Global listener for print buttons to handle vacation alerts
            document.addEventListener('click', (e) => {
                const btn = e.target.closest('.btn-print');
                if (btn && btn.dataset.situacao === 'FERIAS') {
                    e.preventDefault();
                    openVacationModal(btn.dataset.nome);
                }
            });
        });
    </script>

