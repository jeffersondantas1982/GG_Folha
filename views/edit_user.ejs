<%- include('header') %>

    <div class="max-w-md mx-auto">
        <div class="mb-8">
            <a href="/users" class="text-brand-600 font-semibold flex items-center space-x-1 mb-2">
                <span>&larr;</span> <span>Voltar</span>
            </a>
            <h1 class="text-3xl font-bold text-slate-800">Editar Usuário</h1>
            <p class="text-slate-500">Atualize as credenciais de acesso abaixo.</p>
        </div>

        <div class="card p-8 bg-gradient-to-br from-white to-slate-50">
            <form action="/users/edit/<%= user.usuario %>" method="POST" class="space-y-6">

                <div class="space-y-2">
                    <label class="block text-sm font-bold text-slate-700">Nome de Usuário</label>
                    <input type="text" name="usuario" value="<%= user.usuario %>" class="input-field" required>
                </div>

                <div class="space-y-2">
                    <label class="block text-sm font-bold text-slate-700">Nova Senha</label>
                    <input type="password" name="senha" value="<%= user.senha %>" class="input-field"
                        placeholder="Mantenha ou altere a senha" required>
                </div>

                <div class="pt-4 space-y-3">
                    <button type="submit" class="btn-primary w-full shadow-xl">
                        Salvar Alterações
                    </button>
                    <a href="/users"
                        class="block text-center text-sm font-semibold text-slate-400 hover:text-brand-600 transition-colors">
                        Cancelar
                    </a>
                </div>

            </form>
        </div>
    </div>

    <%- include('footer') %>